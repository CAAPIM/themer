{
  "name": "ca-ui-themer",
  "version": "0.0.0-development",
  "license": "MIT",
  "author": "CA Technologies",
  "description": "Framework agnostic utility to make generic JavaScript components themeable and extensible.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint .",
    "flow": "flow check",
    "flow:coverage": "flow-coverage-report -i './src/**/*.js' -t html -t text",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "codecov": "codecov",
    "commit": "git-cz",
    "prebuild": "rimraf ./lib",
    "build": "babel --out-dir ./lib --ignore *.spec.js, ./src",
    "release": "semantic-release pre && npm publish && semantic-release post",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && npm run test"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "object-assign": "^4.1.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-preset-ca": "^1.0.2",
    "babel-register": "^6.18.0",
    "codecov": "^1.0.1",
    "commitizen": "^2.9.5",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^3.13.1",
    "eslint-config-ca": "^1.0.2",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "flow-bin": "^0.37.4",
    "flow-coverage-report": "^0.2.0",
    "husky": "^0.12.0",
    "jest": "^19.0.2",
    "rimraf": "^2.5.4",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.8.2"
  },
  "keywords": [
    "JS",
    "CSS",
    "Themer"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CAAPIM/themer.git"
  }
}
